@model Sport_Match.Dtos.PenaltyRuleDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <h3 class="card-title mb-3">Penali i No-show pravila</h3>

                    <p class="text-muted">
                        Ovdje možeš definirati pravila penalizacije za kasne otkaze i no-show.
                        Pravila omogućuju pravednost i odgovorno ponašanje sudionika.
                    </p>

                    <form asp-action="Save" method="post">

                        
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                Otkazivanje prijave manje od 24h prije događaja
                            </label>

                            <select asp-for="LateCancellationPenalty" class="form-select w-50">
                                <option value="5">5 bodova kazne</option>
                                <option value="10">10 bodova kazne</option>
                                <option value="15">15 bodova kazne</option>
                                <option value="20">20 bodova kazne</option>
                            </select>
                        </div>

                        
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input"
                                       type="checkbox"
                                       asp-for="NoShowEnabled" />

                                <label class="form-check-label fw-bold">
                                    No-show pravilo
                                </label>
                            </div>

                            <small class="text-muted">
                                Korisnik dobiva kaznene bodove ako se ne pojavi na događaju.
                            </small>
                        </div>

                        
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary px-4">
                                Spremi promjene
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

